<UserControl x:Class="InstaDot.LoginWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InstaDot"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Kullanıcı Adı"/>
        <TextBox Name="UsernameTxt" MinWidth="400px" Padding="3" TabIndex="0"/>
        <Separator MinHeight="5px" Visibility="Hidden"/>
        <Label Content="Şifre"/>
        <PasswordBox Name="PasswordTxt" MinWidth="400px" PasswordChar="*" Padding="3" TabIndex="1"/>
        <Separator MinHeight="10px"/>
        <Button Name="LoginBtn" Click="LoginBtn_Click" Content="Giriş yap" Foreground="White" FontSize="20" FontWeight="DemiBold" BorderBrush="Transparent" Padding="10" TabIndex="3">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#5F0A87" Offset="0.0"/>
                    <GradientStop Color="#A4508B" Offset="1.0"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackPanel>
</UserControl>
